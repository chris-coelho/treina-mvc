@model AlterarClienteViewModel

@{
    ViewData["Title"] = "Alterar Cliente";
}

<h2>Alteração de um cliente existente</h2>

@using (Html.BeginForm())
{
  <div class="mb-3">
      @Html.LabelFor(m => m.Codigo, htmlAttributes: new { @class="form-label" })
      @Html.EditorFor(m => m.Codigo, new { htmlAttributes = new { @class="form-control", @readonly = "readonly"} })
      @Html.ValidationMessageFor(m => m.Codigo, "", new {@class =  "text-danger"})
  </div>

  <div class="mb-3">
      @Html.LabelFor(m => m.Nome, htmlAttributes: new { @class="form-label" })
      @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class="form-control", @autofocus = "autofocus"} })
      @Html.ValidationMessageFor(m => m.Nome, "", new {@class =  "text-danger"})
  </div>

  <div class="mb-3">
      @Html.LabelFor(m => m.Telefone, htmlAttributes: new { @class="form-label" })
      @Html.EditorFor(m => m.Telefone, new { htmlAttributes = new { @class="form-control"} })
      @Html.ValidationMessageFor(m => m.Telefone, "", new {@class =  "text-danger"})
  </div>

  <div class="mb-3">
      @Html.LabelFor(m => m.Bairro, htmlAttributes: new { @class="form-label" })
      @Html.EditorFor(m => m.Bairro, new { htmlAttributes = new { @class="form-control"} })
  </div>

  <div class="mb-3">
      @Html.LabelFor(m => m.Cidade, htmlAttributes: new { @class="form-label" })
      @Html.EditorFor(m => m.Cidade, new { htmlAttributes = new { @class="form-control"} })
  </div>

  <div class="mb-3">
      @Html.LabelFor(m => m.Uf, htmlAttributes: new { @class="form-label" })
      @Html.EditorFor(m => m.Uf, new { htmlAttributes = new { @class="form-control"} })
  </div>

  <button type="submit" class="btn btn-primary">Salvar</button>
}


